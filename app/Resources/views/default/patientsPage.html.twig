{% extends 'mainPage.html.twig' %}

{% block title %}
    {{title}}
{% endblock %}

{% block main %}
	
    <div class="row">
		<div id="control_panel" class="col-md-2">
			<a href="create-patient" class="btn btn-default btn-block btn-success">Patient einfügen</a>
			<a href="#" id="edit_button" class="btn btn-default btn-block">Patient bearbeiten</a>
			<a href="#" id="delete_button" class="btn btn-default btn-block">Patient entfernen</a>
		</div>
		<div id="content" class="col-md-10">
			<h2>Übersicht aller Patienten</h2>
		

		<table id="patients_table" class="table table-striped table-bordered">
			<thead>
	            <tr>
	                <th>Name</th>
	                <th>E-Mail</th>
	                <th>Tel. Nummer</th>
	            </tr>
	        </thead>

		    {% for p in patients %}
		        <tr>
		            <td>{{ p.firstName ~ " " ~ p.lastName }}</td>
		            <td>{{ p.email }}</td>
		            <td>{{ p.phoneNumber }}</td>
		        </tr>
		    {% endfor %}
	    </table>
	    </div>
	</div>

{% endblock %}
