{% extends 'default/objectListPage.html.twig' %}

{% block table %}
	
	<table id="progress_table" class="table table_main table-striped table-bordered">
		<thead>
	        <tr>
	        	<th>Id</th>
	        	<th>Patient Name</th>
	        	<th>Kurs Name</th>
	        	<th>Datum</th>
	        	<th>Angemeldet</th>
	        	<th>Besucht</th>
	        	<th>Comments</th>
	        	
	        </tr>
	    </thead>

	    {% for p in patArrRef %}
	        <tr>
	        	<td>{{ p.id }}</td>
	        	<td>{{ p.patient.firstName ~ " " ~ p.patient.lastName }}</td>
	        	<td>{{ p.arrangement.name }}</td>
	        	<td>{{ p.arrangement.dateTime | date('d.m.Y') ~ ", um " ~ p.arrangement.dateTime | date('H:i') }}</td>
	            <td>{{ p.registered }}</td>
	            <td>{{ p.attended }}</td>
	            <td>{{ p.comments }}</td>
	        </tr>
	    {% endfor %}
    </table>

{% endblock %}
